                android:layout_marginRight="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:id="@+id/every_dsc3"/>

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

